<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Azure Playground</title>

    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/app")

    @Styles.Render("~/Content/css-bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container site-container">
        <div class="site-navbar">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "site-navbar-item" })

            @if (User.Identity.IsAuthenticated) {
                @Html.ActionLink("Logged in", "LoggedIn", "Home", null, new { @class = "site-navbar-item" })
                @Html.ActionLink("Change password", "ChangePassword", "Home", null, new { @class = "site-navbar-item" })
                using (Html.BeginForm("LogOut", "Home", FormMethod.Post, new { @class = "html-only d-inline" })) {
                    <button type="submit" class="btn btn-link site-navbar-item">Log out</button>
                }
            }
            else {
                @Html.ActionLink("Log in", "LogIn", "Home", null, new { @class = "site-navbar-item" })
                @Html.ActionLink("Register", "Register", "Home", null, new { @class = "site-navbar-item" })
                @Html.ActionLink("Resend activation", "SendActivation", "Home", null, new { @class = "site-navbar-item" })
                @Html.ActionLink("Activate", "Activate", "Home", null, new { @class = "site-navbar-item" })
            }
        </div>
    </div>

    <div class="container site-container">
        <div class="site-content">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>